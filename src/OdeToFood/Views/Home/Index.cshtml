@model OdeToFood.ViewModels.HomePageViewModel
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Home</title>
</head>
<body>
    <h1>Welcome</h1>
    <h3>@Model.CurrentGreeting</h3>
    <table>
        @foreach (var restaraunt in Model.Restaurants)
        {
            <tr>
                <td>
                    @Html.ActionLink(restaraunt.Id.ToString(), "Details", new { id = restaraunt.Id })
                </td>
                <td>@restaraunt.Name</td>
            </tr>
        }
    </table>
</body>
</html>