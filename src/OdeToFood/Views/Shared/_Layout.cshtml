@using System.Security.Claims
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="/node_modules/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body>

    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">OdeToFood</a>
        </div>
        <div class="navbar navbar-nav navbar-right">
            @if (User.IsSignedIn())
            {
                <form method="post" asp-controller="Account" asp-action="Logout" class="navbar-form">
                    @User.GetUserName()
                    <input type="submit" value="Logout" class="btn btn-danger"/>
                </form>
            }
            else
            {
                <a class="btn btn-default btn-xs navbra-btn" asp-controller="Account" asp-action="Login">Login</a>
                <a class="btn btn-default btn-xs navbra-btn" asp-controller="Account" asp-action="Register">Register</a>
            }
        </div>
    </nav>

    <div class="container">
        @RenderBody()
        <footer>
            @RenderSection("footer", false)
            @Component.Invoke("Greeting")
        </footer>
    </div>

    <environment name="Development">
        <script src="/node_modules/jquery/dist/jquery.js"></script>
        <script src="/node_modules/jquery-validation/dist/jquery.validate.js"></script>
        <script src="/node_modules/jquery-validation-unobtrusive/jquery.valdate.unobtrusive.js"></script>
    </environment>

    <environment name="Staging, Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.1.4.min.js"
                src-fallback-src="/node_modules/jquery/dist/jquery.js"
                src-fallback-test="window.jQuery"
                ></script>
        <script src="/node_modules/jquery-validation/dist/jquery.validate.js"></script>
        <script src="/node_modules/jquery-validation-unobtrusive/jquery.valdate.unobtrusive.js"></script>
    </environment>
    
</body>
</html>
